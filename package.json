{
  "name": "@console/graphql-data-source-base",
  "version": "0.0.0-semantic-release",
  "description": "This is a data source for the Bluemix GraphQL Âµ-service.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepush": "npm test",
    "prebuild": "del-cli ./dist",
    "build": "babel src -d dist",
    "proxy": "cd node_modules/@console/reverseproxy && CONFIG_FILE=../../../config/routes-atlas.json LOCAL_HOST_NAME=localhost PROXY_OUTER_URL=true npm start >/dev/null 2>&1",
    "dev": "bluemix-graphql --data-source-dir ./",
    "local": "npm run dev -- --local",
    "atlas": "npm run proxy & npm run dev -- --atlas --config ./config/app_env_private.json",
    "lint": "eslint src/*.js",
    "test:unit": "NODE_ENV=test LOG4JS_LEVEL='OFF' jest --coverage",
    "test": "npm run lint --silent && npm run test:unit --silent"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:bluemix/graphql-data-source-base.git"
  },
  "keywords": [
    "graphql"
  ],
  "author": "Jason Lengstorf <jason.lengstorf@ibm.com> (https://lengstorf.com)",
  "license": "ISC",
  "dependencies": {
    "@console/graphql-data-source-helpers": "^1.0.2",
    "casual": "^1.5.14",
    "graphql-tools": "^1.2.1"
  },
  "devDependencies": {
    "@console/graphql": "^1.2.0",
    "@console/reverseproxy": "^3.0.22",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.1.2",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "semantic-release": "^6.3.6"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "@console/console-platform-key-value-store": "<rootDir>test/__mocks__/console-platform-key-value-store.js"
    },
    "testMatch": [
      "<rootDir>test/**/*-test.js"
    ]
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://dev-console-npm.stage1.ng.bluemix.net/"
  },
  "release": {
    "githubUrl": "https://github.ibm.com/",
    "githubApiPathPrefix": "api/v3",
    "verifyConditions": "condition-travis-enterprise"
  }
}
